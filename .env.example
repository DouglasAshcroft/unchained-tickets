# OnchainKit Configuration
NEXT_PUBLIC_ONCHAINKIT_API_KEY=your_coinbase_api_key_here
NEXT_PUBLIC_PROJECT_NAME="Unchained Tickets"

# Blockchain Configuration
NEXT_PUBLIC_CHAIN_ID=8453 # Base mainnet (84532 for testnet)
BASESCAN_API_KEY=your_basescan_api_key_here
# Development Mode (true = mock payments, false = real onchain payments)
NEXT_PUBLIC_DEV_MODE=true

COINBASE_PAY_API_KEY=your_api_key_here
# Optional: override if Coinbase gives you a different base URL
COINBASE_PAY_API_URL=https://api.coinbase.com/v3/buy/sessions
COINBASE_PAY_SUCCESS_URL=https://your-app.com/checkout/success
COINBASE_PAY_CANCEL_URL=https://your-app.com/checkout/cancel

# Missing enviromrnet condictions 
COINBASE_WEBHOOK_SECRET not set (needed for webhook verification)
COINBASE_PAY_API_KEY shows placeholder value
NFT_CONTRACT_ADDRESS to mainnet address

2.3 Update Environment
NFT_CONTRACT_ADDRESS=<mainnet address>

# Developer Access (wallet-based RBAC)
# Map your personal Base wallet to the elevated dev role at runtime.
# When this wallet connects, it will automatically be granted dev role
# which provides full access to all features including venue dashboard.
DEV_WALLET_ADDRESS=0xYourBaseWalletHere
# Also add to client-side for hook to check (same value as above)
NEXT_PUBLIC_DEV_WALLET_ADDRESS=0xYourBaseWalletHere

# Database
DATABASE_URL="postgresql://user:password@localhost:5432/unchained?schema=public"

# Authentication & Security (REQUIRED)
# Generate JWT secret with: openssl rand -base64 32
JWT_SECRET=your_jwt_secret_here_minimum_32_characters_required

# Admin Password for Database Seeding (REQUIRED - minimum 12 characters)
# Use a strong password with uppercase, lowercase, numbers, and symbols
ADMIN_PASSWORD=your_secure_admin_password_here

# API Configuration (for local development)
NEXT_PUBLIC_API_BASE_URL=http://localhost:3000

# Optional: External Services
SERPAPI_KEY=your_serpapi_key_for_google_events
