# OnchainKit Configuration
NEXT_PUBLIC_ONCHAINKIT_API_KEY=your_coinbase_api_key_here
NEXT_PUBLIC_PROJECT_NAME="Unchained Tickets"

# Blockchain Configuration
NEXT_PUBLIC_CHAIN_ID=8453 # Base mainnet (84532 for testnet)
BASE_RPC_URL=https://sepolia.base.org # RPC URL for Base network
BASESCAN_API_KEY=your_basescan_api_key_here
NFT_CONTRACT_ADDRESS=<your_nft_contract_address>
NEXT_PUBLIC_NFT_CONTRACT_ADDRESS=<your_nft_contract_address>

# Minting Wallet Configuration (REQUIRED for on-chain event registration)
# This wallet must have MINTER_ROLE on the UnchainedTickets contract
# Generate a new wallet: https://vanity-eth.tk/ or use: npx hardhat accounts
#
# IMPORTANT: Private key must be a valid 64-character hex string (32 bytes)
# Format: 0x followed by exactly 64 hexadecimal characters (0-9, a-f)
# Example: 0x1234567890abcdef1234567890abcdef1234567890abcdef1234567890abcdef
# The 0x prefix is optional - it will be added automatically if missing
MINTING_PRIVATE_KEY=0xYourPrivateKeyHere...

# Development Mode (true = mock payments, false = real onchain payments)
NEXT_PUBLIC_DEV_MODE=true

# Coinbase Developer Platform (CDP) - REQUIRED FOR ONRAMP
# Get these from: https://portal.cdp.coinbase.com/
NEXT_PUBLIC_CDP_PROJECT_ID=your_cdp_project_id_here
CDP_API_KEY_NAME=organizations/YOUR_ORG_ID/apiKeys/YOUR_KEY_ID
CDP_API_KEY_PRIVATE_KEY="-----BEGIN EC PRIVATE KEY-----\nYOUR_PRIVATE_KEY_HERE\n-----END EC PRIVATE KEY-----"

# Coinbase Onramp Configuration
NEXT_PUBLIC_COINBASE_ONRAMP_ENABLED=true
COINBASE_ONRAMP_MINIMUM_USD=10.00
COINBASE_ONRAMP_API_URL=https://api.developer.coinbase.com

# Coinbase Commerce (for crypto-only payments)
COINBASE_COMMERCE_API_KEY=your_commerce_api_key_here
COINBASE_WEBHOOK_SECRET=your_webhook_secret_here

# Developer Access (wallet-based RBAC)
# Map your personal Base wallet to the elevated dev role at runtime.
# When this wallet connects, it will automatically be granted dev role
# which provides full access to all features including venue dashboard.
DEV_WALLET_ADDRESS=0xYourBaseWalletHere
# Also add to client-side for hook to check (same value as above)
NEXT_PUBLIC_DEV_WALLET_ADDRESS=0xYourBaseWalletHere

# Database
DATABASE_URL="postgresql://user:password@localhost:5432/unchained?schema=public"

# Authentication & Security (REQUIRED)
# Generate JWT secret with: openssl rand -base64 32
JWT_SECRET=your_jwt_secret_here_minimum_32_characters_required

# Admin Password for Database Seeding (REQUIRED - minimum 12 characters)
# Use a strong password with uppercase, lowercase, numbers, and symbols
ADMIN_PASSWORD=your_secure_admin_password_here

# API Configuration (for local development)
NEXT_PUBLIC_API_BASE_URL=http://localhost:3000

# Optional: External Services
SERPAPI_KEY=your_serpapi_key_for_google_events

# AI Poster Generation (Replicate API)
# Get your API token from: https://replicate.com/account/api-tokens
REPLICATE_API_TOKEN=your_replicate_api_token_here
NEXT_PUBLIC_POSTER_GENERATION_ENABLED=true
